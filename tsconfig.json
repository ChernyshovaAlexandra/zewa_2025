{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": { "@/*": ["src/*"] },
    "rootDir": "src",
    "outDir": "dist",

    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    
    "types": ["vite/client", "vitest/globals"],
    
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },

  "include": ["src/**/*", "global.d.ts"],
  "exclude": ["dist", "node_modules"]
}
